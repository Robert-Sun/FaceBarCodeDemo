<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

    <ImageView
        android:id="@+id/image"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"
        android:background="@color/chat_text_color_c"
        android:padding="5dp"/>

    <EditText
        android:id="@+id/text"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="请输入文字"
        android:singleLine="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"/>

    <Button
        android:id="@+id/ok"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/text"
        android:layout_marginLeft="10dp"
        android:layout_alignBottom="@id/text"
        android:text="确定"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <View
            android:id="@+id/c1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/chat_text_color_f"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"/>
        <View
            android:id="@+id/c2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/chat_text_color_h"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"/>
        <View
            android:id="@+id/c3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/broadcast_text_color_e"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"/>
        <View
            android:id="@+id/c4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/register_text_color_g"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"/>
        <View
            android:id="@+id/c5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/red"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"/>
        <View
            android:id="@+id/c6"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/green"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"/>
    </LinearLayout>

</RelativeLayout>